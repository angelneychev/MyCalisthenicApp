@model IEnumerable<HomePopularProgramsViewModel>

<div class="popular-classes">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title title-padding-bottom text-center">
                    <p class="subtitle">What do you want to learn today?</p>
                    <h1 class="title">Popular Programs</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="popular-slider">
                    @foreach (var program in Model)
                    {
                        <div class="single-popular-item">
                            <div class="popular-item-style-01">
                                <div class="thumb">
                                    <img src="@program.ImageUrl" alt="slider1">
                                </div>
                                <div class="content">
                                    <p></p>
                                </div>
                                <div class="hover-element">
                                    <div class="hover-top">
                                        <span>@program.Title</span><br>
                                        <a asp-controller="Programs" asp-action="Details" class="btn" asp-route-id="@program.Id">Details</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<!-- popular classes end -->
