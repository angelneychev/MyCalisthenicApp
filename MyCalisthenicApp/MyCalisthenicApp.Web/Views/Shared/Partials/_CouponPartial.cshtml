@model CouponViewModel

<form class="col-lg-8"  asp-controller="ShoppingBags" asp-action="Coupon">
    <input name="Coupon" type="text" class="form-control" placeholder="Coupon Code">
    <span asp-validation-for="Coupon" class="text-danger"></span>
    <span class="input-group-btn"><br />
        <button class="btn btn-default submit-btn" type="submit">Apply Coupon</button>
    </span>
</form>
