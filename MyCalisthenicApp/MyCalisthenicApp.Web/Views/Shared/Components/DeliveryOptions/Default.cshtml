@model AddressInputViewModel

<div class="col-lg-7">
    <div class="delivery-content">
        <div class="title">
            <h2>Choose delivery options</h2>
        </div>
        <div class="delivery-tab">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#home" class="active"><i class="flaticon-placeholder-1"></i> <span>Pick Up Point</span></a></li>
                <li class="mb-4"><a data-toggle="pill" href="#menu1"><i class="fa fa-truck" aria-hidden="true"></i> <span>Our couriers</span> </a></li>
            </ul>

            <div class="tab-content">
                <div id="home" class="tab-pane fade in active show">
                    <h2>Enter delivery address</h2>
                    <div class="form-group">
                        <form method="post" asp-controller="ShoppingBags" asp-action="CreateAddress" class="form">
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="name">Full Name</label>
                                <input asp-for="FullName" id="name" type="text" placeholder="Svetoslav Kazakov" class="input-form" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="phn">Phone Number</label>
                                <input asp-for="PhoneNumber" id="phn" type="text" placeholder="0888414232" class="input-form" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="country">Country</label>
                                <input asp-for="Country" id="country" type="text" placeholder="Bulgaria" class="input-form" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="city">City</label>
                                <input asp-for="City" id="city" type="text" placeholder="Dryanovo" class="input-form" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="phn1">Post Code</label>
                                <input asp-for="PostCode" id="phn1" type="text" placeholder="5370" class="input-form" />
                                <span asp-validation-for="PostCode" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="address">Address</label>
                                <textarea asp-for="Address" id="address" cols="30" rows="5" placeholder="Shipka street, 186"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="buildingNumber">Building Number</label>
                                <input asp-for="BuildingNumber" id="buildingNumber" type="text" placeholder="13A" class="input-form" />
                            </div>
                            <div class="form-field margin-top-30 margin-bottom-30">
                                <label for="instruction">Delivery Instructions (Optional)</label>
                                <textarea asp-for="DeliveryInstructions" id="instruction" cols="30" rows="5" placeholder="x x x x x x x x x x xx x x x xx x x x x x x x x x x x x x x x x x x xx x x x xx x x x x x x x x x x x x x x x x x x xx x x x xx x x x x x x x x"></textarea>
                            </div>
                            <div class="btn-wrapper">
                                <button type="submit" class="btn btn-element btn-lg-size btn-main-color btn-rounded">Go To Payment</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="menu1" class="tab-pane fade">
                    <h2>Couriers we use</h2>
                    <div class="form-group">
                        <img style="height:200px;width:400px;" src="https://www.leron.bg/images/Econt_Express_square_400x400.png" alt="ekont-logo" />
                    </div>
                    <div>
                        <h4>Price to address:&nbsp;<span class="text-danger">$6</span> </h4>
                    </div>
                    <div>
                        <h4>Price to office:&nbsp;<span class="text-danger">$5</span></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>