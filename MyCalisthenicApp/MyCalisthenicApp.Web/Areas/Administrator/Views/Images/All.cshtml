@model IList<ImagesAdminViewModel>

<div style="height:500px;overflow-x:scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Url</th>
                <th scope="col">Product id</th>
                <th scope="col">Post id</th>
                <th scope="col">Exercise id</th>
                <th scope="col">Program id</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var image in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Images", new { id = image.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@image.Id</td>
                    <td>@image.IsDeleted</td>
                    <td>@image.DeletedOn</td>
                    <td>@image.CreatedOn</td>
                    <td>@image.ModifiedOn</td>
                    <td>@image.Url</td>
                    <td>@image.ProductId</td>
                    <td>@image.PostId</td>
                    <td>@image.ExerciseId</td>
                    <td>@image.ProgramId</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>