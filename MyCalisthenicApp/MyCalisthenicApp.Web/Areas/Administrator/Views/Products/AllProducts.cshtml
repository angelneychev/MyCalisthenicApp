@model IList<ProductsAdminViewModel>

<div style="height:500px;overflow-x:scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Size</th>
                <th scope="col">Color</th>
                <th scope="col">Sort</th>
                <th scope="col">Type</th>
                <th scope="col">Rating</th>
                <th scope="col">Description</th>
                <th scope="col">Is sold out</th>
                <th scope="col">Category id</th>
                <th scope="col">Category</th>
                <th scope="col">Images</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var product in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Products", new { id = product.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@product.Id</td>
                    <td>@product.IsDeleted</td>
                    <td>@product.DeletedOn</td>
                    <td>@product.CreatedOn</td>
                    <td>@product.ModifiedOn</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Size</td>
                    <td>@product.Color</td>
                    <td>@product.Sort</td>
                    <td>@product.Type</td>
                    <td>@product.Rating</td>
                    <td>@(product.Description)</td>
                    <td>@(product.IsSoldOut)</td>
                    <td>@(product.CategoryId)</td>
                    <td>@(product.CategoryName)</td>
                    <td>
                        @foreach (var image in product.ImagesUrl)
                        {
                            @(image)<br />
                        }
                    </td>

                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Likes", "Likes", "Products", new { id = product.Id })</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>