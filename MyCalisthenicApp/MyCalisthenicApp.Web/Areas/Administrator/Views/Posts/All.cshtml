@model IList<PostsAdminViewModel>

<div style="height:500px;overflow-x:scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Author id</th>
                <th scope="col">Author</th>
                <th scope="col">Category id</th>
                <th scope="col">Category</th>
                <th scope="col">Rating</th>
                <th scope="col">Type</th>
                <th scope="col">Video url</th>
                <th scope="col">Is public</th>
                <th scope="col">Images</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var post in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Posts", new { id = post.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@post.Id</td>
                    <td>@post.IsDeleted</td>
                    <td>@post.DeletedOn</td>
                    <td>@post.CreatedOn</td>
                    <td>@post.ModifiedOn</td>
                    <td>@post.Title</td>
                    <td>@post.Description</td>
                    <td>@post.AuthorId</td>
                    <td>@post.AuthorName</td>
                    <td>@post.CategoryId</td>
                    <td>@post.CategoryName</td>
                    <td>@post.Rating</td>
                    <td>@(post.Type)</td>
                    <td>@(post.VideoUrl)</td>
                    <td>@(post.IsPublic)</td>
                    <td>
                        @foreach (var image in post.ImagesUrl)
                        {
                            @(image)<br />
                        }
                    </td>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Likes", "Likes", "Posts", new { id = post.Id })</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>