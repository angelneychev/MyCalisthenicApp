@model IList<SupplierAdminViewModel>

<div style="height:500px;overflow-x:scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Name</th>
                <th scope="col">Price to home</th>
                <th scope="col">Price to office</th>
                <th scope="col">Logo url</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var supplier in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Suppliers", new { id = supplier.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@supplier.Id</td>
                    <td>@supplier.IsDeleted</td>
                    <td>@supplier.DeletedOn</td>
                    <td>@supplier.CreatedOn</td>
                    <td>@supplier.ModifiedOn</td>
                    <td>@supplier.Name</td>
                    <td>@supplier.PriceToHome</td>
                    <td>@supplier.PriceToOffice</td>
                    <td>@supplier.LogoUrl</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>
