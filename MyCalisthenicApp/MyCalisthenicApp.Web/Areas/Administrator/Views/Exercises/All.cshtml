@model IList<ExercisesAdminViewModel>

<div style="height:500px;overflow-x:scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Video url</th>
                <th scope="col">Category id</th>
                <th scope="col">Category</th>
                <th scope="col">Images</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var exercise in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Exercises", new { id = exercise.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@exercise.Id</td>
                    <td>@exercise.IsDeleted</td>
                    <td>@exercise.DeletedOn</td>
                    <td>@exercise.CreatedOn</td>
                    <td>@exercise.ModifiedOn</td>
                    <td>@exercise.Name</td>
                    <td>@exercise.Description</td>
                    <td>@exercise.VideoUrl</td>
                    <td>@exercise.ProgramCategoryId</td>
                    <td>@exercise.ProgramCategoryName</td>
                    <td>
                        @foreach (var image in exercise.ImagesUrl)
                        {
                            @(image)<br />
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>