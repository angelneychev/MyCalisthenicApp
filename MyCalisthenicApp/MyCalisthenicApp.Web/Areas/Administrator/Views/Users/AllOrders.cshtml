@model IList<OrdersAdminViewModel>

<div style="height: 500px;  overflow-x: scroll">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Created on</th>
                <th scope="col">Modified on</th>
                <th scope="col">Is deleted</th>
                <th scope="col">Deleted on</th>
                <th scope="col">Status</th>
                <th scope="col">Payment status</th>
                <th scope="col">Delivery date</th>
                <th scope="col">Dispatch date</th>
                <th scope="col">Total price</th>
                <th scope="col">Discount</th>
                <th scope="col">Delivery price</th>
                <th scope="col">EasyPay number</th>
                <th scope="col">Payment type</th>
                <th scope="col">User id</th>
                <th scope="col">Delivery address id</th>
                <th scope="col">Membership price</th>
                <th scope="col">Info</th>

            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
            }
            @foreach (var order in Model)
            {
                counter++;

                <tr>
                    <td class="btn btn-danger mb-2 mt-1 ml-2">@Html.ActionLink("Edit", "Edit", "Orders", new { id = order.Id })</td>
                    <th scope="row">@counter</th>
                    <td>@order.Id</td>
                    <td>@order.CreatedOn</td>
                    <td>@order.ModifiedOn</td>
                    <td>@order.IsDeleted</td>
                    <td>@order.DeletedOn</td>
                    <td>@order.Status.ToString()</td>
                    <td>@order.PaymentStatus.ToString()</td>
                    <td>@order.EstimatedDeliveryDate.ToString()</td>
                    <td>@order.DisptachDate.ToString()</td>
                    <td>@order.TotalPrice</td>
                    <td>@(order.Discount)</td>
                    <td>@(order.DeliveryPrice)</td>
                    <td>@(order.EasyPayNumber)</td>
                    <td>@(order.PaymentType.ToString())</td>
                    <td>@(order.UserId)</td>
                    <td>@(order.DeliveryAddressId)</td>
                    <td>@(order.MembershipPrice)</td>
                    <td class="btn btn-danger mt-1">@Html.ActionLink("Products", "All", "Products", new { id = order.Id })</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br />
<div>
    <a class="bg-success ml-2" asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to admin home</a>
</div>
